@model Alerta
@{
    ViewData["Title"]="Alertas";
    
}

<div class="container-fluid" style="background-image: url(http://www.wuf.pe/assets/img/bloq2.jpg)">
    <div class="container mt-5">
        <div class="text-center">
            <h1>ALERTAS</h1>
        </div>
        <div class="row">
            <div class="col-6">
                <form asp-action="FormualrioAlertas" method="post">
                    <p>Por favor ingresar los datos:</p>
                    <div class="form-group">
                        <label>Nombre: </label><br>
                        <input class="form-control" type="text" asp-for="nombre" placeholder="Ingrese nombre de usuario">
                    </div>

                    <div class="form-group">
                        <label for="">TELEFONO: </label><br>
                        <input class="form-control" type="text" asp-for="telefono" placeholder="Ingrese número telefonico">
                    </div>
             
                    <div class="form-group">
                        <label for="">DIRECCIÓN:</label><br>
                        <input class="form-control" type="text" asp-for="direccion" placeholder="Ingrese la dirección donde està ocurriendo el hecho">
                    </div>

                    <div class="form-group">
                        <label for="">DESCRIPCIÓN:  </label><br>
                        <textarea class="form-control" asp-for="descripcion" rows="5"></textarea>
                    </div>

                    <div>
                        <input type="hidden" asp-for="tipo" value=@ViewBag.id>
                    </div>
            
                    <div class="text-center">
                        <button class="btn btn-danger btn-lg">ENVIAR ALERTA</button>
                    </div><br>
                </form>
            </div>
            <div class="col-6 text-center">
                    <img src="http://www.acupunturademascotas.com/wp-content/uploads/2018/02/perro_vet.png" width="450">   
            </div>
        </div>
    </div>
</div>