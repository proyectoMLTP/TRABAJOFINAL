@model LoginViewModel
@{
    @ViewData["Title"]
}

<div class="container">
    <img src="http://www.sclance.com/pngs/cartoon-dog-png/cartoon_dog_png_226068.png" width="1100">
</div>

<div class="container text-center" style="background-color: #87c0cd">

    <h1>INICIAR SESIÓN</h1>

        <div class="row">
            <div class="col-6">
                <form asp-action="IniciarSesion" method="post">
                    <h4>Por favor ingresar sus datos</h4>
                    <div class="form-group">
                        <label for="">CORREO ELECTRONICO: </label>
                        <br>
                        <input class="form-control" asp-for = "Email" placeholder="Ingrese correo electronico">
                    </div>
                    <div class="form-group">
                        <label for="">CONTRASEÑA: </label> 
                        <br> 
                        <input class="form-control" asp-for = "Password" placeholder="Ingrese contraseña">
                    </div>
                    <br>
                    <button class="btn btn-primary">INICIAR SESION</button>
                    <br>
                </form>
            </div>
            <div class="col-6">
                <img src="https://www.melopienso.com/wp-content/uploads/2017/09/dog-hello.png" width="200"> 
            </div>
        </div>
</div>
