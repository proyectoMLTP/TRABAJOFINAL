@model List<Mascota>
@{
    ViewData["Title"]="Adopta";
}
<div class="container-fluid" style="background-image: url(http://www.wuf.pe/assets/img/bloq3.jpg)">
    <div class="container text-center">
        <img src="https://i.ibb.co/KrScXvD/adoptar.png">
        <p>Bienvenido en este apartadado podras adoptar un integrante m√°s a tu familia.</p><br>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-6">
                
                <form asp-action="Adoptar" method="POST">
                    <h2>ACEPTA UN NUEVO INEGRANTE EN TU FAMILIA</h2>
                    
                    <div class="form-group">
                        @foreach(var mas in Model){
                            <img src="@mas.foto" width="120">
                            <br>
                            <p>EDAD: @mas.edad</p>
                            <br>
                            <p>SEXO: @mas.categoria</p>
                            <br>
                        }
                    </div>
                </form>
            </div>

            <div class="col-6">
                <img class="img-thumbnail" src="https://seguros.elcorteingles.es/admin/assets/uploads/files/images/thumbnails_l/adoptar-perro.jpg"><br><br> 
            </div>
        </div>
    </div>
</div>

