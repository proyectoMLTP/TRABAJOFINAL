@model List<Mascota>
@{
    ViewData["Title"]="Adopta";
}
<div class="container-fluid" style="background-image: url(http://www.wuf.pe/assets/img/bloq3.jpg)">
    <div class="container text-center">
        <img src="https://i.ibb.co/KrScXvD/adoptar.png"><br>
        
        <h2>ACEPTA UN NUEVO INEGRANTE EN TU FAMILIA</h2><br>
    </div>
        <div class="row">
        
            @foreach(var mas in Model){
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="@mas.foto" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">EDAD: @mas.edad meses</p>
                        <p class="card-text">SEXO: @mas.categoria</p>
                    </div>
                </div><br>
            </div><br>
            }
        </div>


</div>

