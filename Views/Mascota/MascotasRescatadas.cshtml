@model Mascota
@{
    ViewData["Title"]="MASCOTAS_RESCATADAS";
}


<div class="container-fluid" style="background-image: url(http://www.wuf.pe/assets/img/bloq2.jpg)">
    <div asp-validation-summary="All" style="color: red;" ></div>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <form asp-action="MascotasRescatadas" method="post">
                    <h2>INGRESE DATOS DE LA MASCOTA</h2><br>
                    <p>Por Favor llene correctamente el fomulario</p><br>
                    <div class="form-row">
                        <div class="col-6">
                            <label >EDAD ESTIMADA: </label><br>
                            <input class="form-control" type="int" asp-for="edad" placeholder="EDAD APROXIMADA DE LA MASCOTA EN MESES" >
                        </div>
                        <div class="col-6">
                            <label >SEXO: </label><br>
                            <select asp-for="categoria" class="browser-default custom-select">
                            <option value="SEXO" selected>Elegir...</option>
                            <option value="MACHO" >MACHO</option>
                            <option value="HEMBRA">HEMBRA</option>
                            </select><br>
                        </div>
                    </div><br>
                    <div class="form-group">
                        <label >FOTO </label><br>
                        <input class="form-control" type="text" asp-for="foto" placeholder="INGRESE LA URL DE LA FOTO">
                    </div>
                    <br>
                    <div class="form-group">
                        <label >DAR UN NOMBRE: </label><br>
                        <input class="form-control" type="text" asp-for="nombre" placeholder="INGRESE UN NOMBRE PARA LA MASCOTA">
                    </div>
                    <br>
                    <br>
                    <button class="btn btn-danger btn-lg">AÃ‘ADIR NUEVA MASCOTA</button>
                </form>
            </div>

            <div class="col-6 text-center">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRJD7eOhAtmQVDlrmO61ZLEauZV1YRoUSlFJqiH9qqN6YhLsV-G" height="450">
            </div>
        </div>
    </div>
</div>
